{
  "name": "ship-it",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn browserify main.js -o bundle.js",
    "jq-version": "node -e 'console.log(require(\"./package.json\").version)'",
    "postinstall": "./download.sh",
    "start": "yarn build && http-server .",
    "ship-it": "yarn build && tar -czf ship-it.$(yarn jq-version).tar.gz $(cat ship-it.list)",
    "test": "mocha --recursive test"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "browserify": "^16.2.3",
    "fs-extra": "^7.0.1",
    "http-server": "^0.11.1",
    "nodemon": "^1.18.9",
    "pixi.js": "^4.8.5",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "tar": "^4.4.8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "sinon": "^7.2.3"
  }
}
