{
  "name": "ship-it",
  "version": "0.1.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn browserify main.js -o bundle.js",
    "jq-version": "cat ./package.json | jq -r '.version'",
    "postinstall": "./download.sh",
    "start": "nodemon -x 'yarn build && http-server .'",
    "ship-it": "yarn build && tar -czf ship-it.$(yarn jq-version).tar.gz $(cat ship-it.list)",
    "test": "mocha --recursive test"
  },
  "dependencies": {
    "browserify": "^16.2.3",
    "http-server": "^0.11.1",
    "pixi.js": "^4.8.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "sinon": "^7.2.3"
  }
}
